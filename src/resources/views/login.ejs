<!DOCTYPE html>
<html lang="en">

<head>
  <title>Bigdeal - Multi-purpopse E-commerce Html Template</title>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="description" content="big-deal">
  <meta name="keywords" content="big-deal">
  <meta name="author" content="big-deal">
  <link rel="icon" href="/img/favicon/favicon.png" type="image/x-icon">
  <link rel="shortcut icon" href="/img/favicon/favicon.png" type="image/x-icon">

  <!--Google font-->
  <link href="https://fonts.googleapis.com/css?family=PT+Sans:400,700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Raleway&display=swap" rel="stylesheet">

  <!--icon css-->
  <link rel="stylesheet" type="text/css" href="/css/back-end/font-awesome.css">
  <link rel="stylesheet" type="text/css" href="/css/back-end/themify.css">

  <!--Slick slider css-->
  <link rel="stylesheet" type="text/css" href="/css/back-end/slick.css">
  <link rel="stylesheet" type="text/css" href="/css/back-end/slick-theme.css">


  <!--Animate css-->
  <link rel="stylesheet" type="text/css" href="/css/back-end/animate.css">


  <!-- Bootstrap css -->
  <link rel="stylesheet" type="text/css" href="/css/back-end/bootstrap.css">


  <!-- Theme css -->
  <link rel="stylesheet" type="text/css" href="/css/back-end/color2.css" media="screen" id="color">
</head>

<body>

  <!-- breadcrumb start -->
  <div class="breadcrumb-main ">
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="breadcrumb-contain">
            <div>
              <h2>login</h2>
              <ul>
                <li><a href="index.html">home</a></li>
                <li><i class="fa fa-angle-double-right"></i></li>
                <li><a href="javascript:void(0)">login</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- breadcrumb End -->

  <!--section start-->
  <section class="login-page section-big-py-space b-g-light">
    <div class="custom-container">
      <div class="row">
        <div class="col-xl-4 col-lg-6 col-md-8 offset-xl-4 offset-lg-3 offset-md-2">
          <div class="theme-card">
            <h3 class="text-center">Login Form </h3> 
            <form action="/user/login" class="theme-form" method="post">
              <% if(error) {%>
                <p class="text-danger" style="text-align: center;"> <%=error%> </p>
            <% } %>  
              <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email" placeholder="Email" value="<%= data? data.email : '' %>" >
              </div>
              <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password" placeholder="Enter your password" value="<%= data? data.password : '' %>">
              </div>
              <button class="btn btn-normal">Login</button>
              <a class="float-end txt-default mt-2" href="forget-pwd.html">Forgot your password?</a>
            </form>
            <p class="mt-3">Sign up for a free account at our store. Registration is quick and easy. It allows you to be
              able to order from our shop. To start shopping click register.</p>
            <a href="/register" class="txt-default pt-3 d-block">Create an Account</a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!--Section ends-->

  <!-- latest jquery-->
  <script src="/js/jquery-3.3.1.min.js"></script>

  <!-- menu js-->
  <script src="/js/menu.js"></script>



  <!-- tool tip js -->
  <script src="/js/tippy-popper.min.js"></script>
  <script src="/js/tippy-bundle.iife.min.js"></script>

  <!-- popper js-->
  <script src="/js/popper.min.js"></script>

  <!-- father icon -->
  <script src="/js/feather.min.js"></script>
  <script src="/js/feather-icon.js"></script>


  <!-- slick js-->
  <script src="/js/slick.js"></script>

  <!-- Bootstrap js-->
  <script src="/js/bootstrap.js"></script>

  <!-- Theme js-->
  <script src="/js/script.js"></script>

</body>

</html>