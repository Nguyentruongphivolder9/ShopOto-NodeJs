<div class="page-body">
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>Categories
                            <small>Bigdeal Admin panel</small>
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">Category</li>
                        <li class="breadcrumb-item active">Categories List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Manage Categories</h5>
                    </div>
                    <div class="card-body order-datatable">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Images</th>
                                    <th>Categories</th>
                                    <th>Descriptions</th>
                                    <th>Date of issue</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% Cates.forEach(item => { %> 
                                <tr>
                                    <td><img src="<%= item.cate_img %>" alt="image" width="100px" class="img-thumbnail"></td>
                                    <td><%= item.cate_name %></td>
                                    <td><%= item.cate_description %></td>
                                    <td><%= new Date(item.updatedAt).toLocaleDateString() %></td>
                                    <td>
                                        <a href="/admin/category/editCategory/<%= item.category_id %>" class="badge badge-success">Edit</a>
                                        <a href="#" class="badge badge-info">View Details</a>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>