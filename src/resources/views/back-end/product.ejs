<div class="page-body">
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>Products
                            <small>Bigdeal Admin panel</small>
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">Product</li>
                        <li class="breadcrumb-item active">Product List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Manage Products</h5>
                    </div>
                    <div class="card-body order-datatable">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Images</th>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Description</th>
                                    <th>Date of issue</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% products.forEach(item => { %> 
                                <tr>
                                    <td>
                                        <div class="d-flex">
                                            <% item.image.forEach(imageUrl => { %>
                                                <img src="<%= imageUrl %>" alt="image" width="100px" class="img-thumbnail">
                                            <% }); %>
                                        </div>
                                    </td>
                                    <td><%= item.product_name %></td>
                                    <td><%= item.price %></td>
                                    <td><%= item.description %></td>
                                    <td><%= new Date(item.updatedAt).toLocaleDateString() %></td>
                                    <td>
                                        <a href="/admin/product/editProduct/<%= item.product_id %>" class="badge badge-success">Edit</a>
                                        <% if(item.on_store) { %>
                                            <a href="/admin/product/showProduct/<%= item.product_id %>" class="badge badge-info">Showing</a>
                                        <% } else { %>
                                            <a href="/admin/product/showProduct/<%= item.product_id %>" class="badge badge-danger">Hiding</a>
                                        <% } %>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>